{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/public/$1" },
    { "src": "/api/updatePredictions", "dest": "/api/updatePredictions.js" }
  ],
  "crons": [
    {
      "schedule": "0 * * * *",  // Runs every hour
      "url": "/api/updatePredictions"
    }
  ]
}
